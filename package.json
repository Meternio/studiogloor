    "nuxt": "^3.8.2",
    "nuxt-icon": "^0.6.6"
  },
  "overrides": {
    "vue": "latest"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "firebase": "^10.7.0",
    "firebase-admin": "^11.11.1",
    "less": "^4.2.0",
    "nuxt-vuefire": "^1.0.0",
